<?xml version="1.0" encoding="UTF-8"?>
<Relatorio_Registos>
    <!-- Meter o id como atributo -->
    <hospital>
       <nome></nome>
       <morada></morada>
       <mês></mês>
       <ano_fiscal></ano_fiscal>
   </hospital>
    
   <!-- Pode haver mais do que um paciente -->
   <lista_pacientes>
       <!-- Meter numero de identificação a atributo -->
        <paciente>
            <nome></nome>
            <data_nacimento></data_nacimento>
            <!-- No genero indicar que so pode meter M/F -->
            <genero></genero>
            
            <!-- Os dados do contacto são opcionais-->
            <contacto>
                <telemovel></telemovel>
                <email></email>
            </contacto>
            
            <!-- Ver os tipos no enunciado 
            Aqui tem mais uma prova do porque o registo clinico fica no paciente,
            para saber quanto atendimentos tem no hospital
            -->
            <tipo_paciente></tipo_paciente> 
        </paciente>  
   </lista_pacientes>  
    
    <!-- Perceber os dados a meter -->
    <relatorio_mensal></relatorio_mensal>
</Relatorio_Registos>
